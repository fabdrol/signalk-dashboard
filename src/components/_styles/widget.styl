dark-blue = #2C3E50 // rgb(44, 62, 80)
bright-red = #FC4349 // rgb(252, 67, 73)
medium-grey = #D7DADB // rgb(215, 218, 219)
light-blue = #6DBCDB // rgb(109, 188, 219)
white = #FFFFFF // rgb(255, 255, 255)

.widget-container
  margin-bottom 2rem

  .widget
    display block
    width 100%
    border-radius 5px
    border 1px solid light-blue
    height 135px
    box-shadow 0 3px 0 rgba(109, 188, 219, .8)
    background-color lighten(dark-blue, 3%)
    transition all .25s ease-in-out
    position relative
    overflow hidden

    &.stale
      border-color bright-red
      box-shadow 0 3px 0 rgba(252, 67, 73, .8)
      background-color bright-red

      h3.title
        color white

    .widget-contents
      display block
      width 100%
      height 100%
      padding 1em

      h1, h2, h3
        margin 0
        padding 0

      h3.title
        color bright-red
        font-size .9em
        text-align center
        text-transform uppercase
        margin-bottom .5rem

      h1.value
        font-size 4.5em
        text-align center
        margin-bottom .5rem

      h2.value
        font-size 2.5em
        text-align center
        margin-bottom .5rem

      .stale
        color bright-red

      .combined-values
        display block
        width 100%
        height 80%
        overflow hidden
        margin-top .5em

      h1.value-right, h1.value-left
        display block
        width 50%
        text-align center
        float right
        font-size 4.5em

      h1.value-left
        float left
        border-right 1px solid lighten(dark-blue, 50%)

      h1 span
        display block
        font-size .2em
        color medium-grey
        text-transform uppercase

    &.stale
      border-color bright-red
      box-shadow 0 3px 0 rgba(252, 67, 73, .8)
      background-color lighten(bright-red, 20%)

      h3.title
        color white

      h1, h2
        color lighten(bright-red, 50%)
